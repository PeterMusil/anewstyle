---
const { id } = Astro.props;
---

<section id={id} class="dark">
  <div class="container container--l">
    <h2 class="title title--white title--center" data-localize="tech_title">
    </h2>

    <div class="tech-intro">
      <p class="desc desc--center desc--no-mg">
        <span data-localize="tech_desc"></span>
      </p>
    </div>

    <div class="tech-grid">
      <!-- Composition Block -->
      <div class="tech-card">
        <img
          src="./images/technologies/skladba_kamenne_dyhy.avif"
          alt="Skladba kamenné dýhy"
          loading="lazy"
          width="600"
          height="400"
        />
        <div class="tech-card__body">
          <h3 class="tech-card__title" data-localize="tech_subtitle1"></h3>
          <ul class="tech-card__list">
            <li data-localize="tech_stone_1"></li>
            <li data-localize="tech_stone_2"></li>
            <li data-localize="tech_stone_3"></li>
            <li data-localize="tech_stone_4"></li>
          </ul>
        </div>
      </div>

      <!-- Construction Block -->
      <div class="tech-card">
        <img
          src="./images/technologies/konstrukce_sviticiho_panelu.avif"
          alt="Konstrukce svítícího panelu"
          loading="lazy"
          width="600"
          height="400"
        />
        <div class="tech-card__body">
          <h3 class="tech-card__title" data-localize="tech_subtitle2"></h3>
          <ul class="tech-card__list">
            <li data-localize="tech_panel_1"></li>
            <li data-localize="tech_panel_2"></li>
            <li data-localize="tech_panel_3"></li>
            <li data-localize="tech_panel_4"></li>
            <li data-localize="tech_panel_5"></li>
            <li data-localize="tech_panel_6"></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  @import "../../styles/Base/global";

  .tech-intro {
    max-width: 900px;
    margin: 0 auto 5rem auto;

    .desc {
      border: none;
      padding: 0;
      color: rgba($color-white, 0.7);
    }
  }

  .tech-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    /* Ensure grid items stretch to same height */
    align-items: stretch;

    @include res-min-laptop-l {
      grid-template-columns: 1fr 1fr;
      gap: 6rem;
    }
  }

  .tech-card {
    --card-ig-hieght: 250px;
    display: grid;
    gap: $gap-xl;
    grid-template-rows: var(--card-ig-hieght) auto 1fr;
    translate: 0 0;
    background-color: #{$color-bg};
    border: 2px solid var(--card-border-color, $color-border);
    border-radius: 20px;
    scale: 1;
    padding: $gap-xxl;
    transition:
      border-color $trans-time ease-in-out,
      scale $trans-time ease-in-out;

    @include hover {
      scale: 1.025;
      --card-border-color: #{$color-primary};
    }

    &__body {
      padding-inline: $gap-xxl;
      grid-row: 2/4;
      display: grid;
      grid-template-rows: subgrid;
    }

    &__title {
      text-align: center;
      font-family: $font-title;
      font-size: clamp($gap-l, 2.5svb, $gap-xl);
      line-height: 1.3;
      color: $color-primary;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 700;
      line-height: 1.5;
      text-wrap: balance;
      text-align: center;
    }

    > img {
      inline-size: 100%;
      block-size: auto;
      max-block-size: var(--card-ig-hieght);
      display: block;
      object-fit: contain;
      margin-inline: auto;
      margn-block-end: $gap-xl;
    }

    &__list {
      list-style: disc;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: $gap-l;
      margin-top: 1rem;

      li {
        position: relative;
        font-family: $font-text;
        color: $color-white;
        font-size: $gap-l;
        font-weight: 300;
        line-height: 1.5;
        text-align: left;
      }

      li::marker {
        color: $color-primary;
      }
    }
  }

  .tech-card ol {
    margin: 0;
    padding: 0 0 0 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;

    li {
      font-family: $font-text;
      color: rgba($color-white, 0.95);
      font-size: 1.3rem;
      font-weight: 300;
      line-height: 1.6;
    }

    li::marker {
      color: $color-primary;
      font-weight: 700;
    }
  }
</style>
