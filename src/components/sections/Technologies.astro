---
const { id } = Astro.props;
---

<section id={id} class="dark">
  <div class="container container--l">
    <h2 class="title title--white title--center" data-localize="tech_title">
    </h2>

    <div class="tech-intro">
      <p class="desc desc--center desc--no-mg">
        <span data-localize="tech_desc"></span>
      </p>
    </div>

    <div class="tech-grid">
      <!-- Composition Block -->
      <div class="tech-card">
        <div class="tech-card__image">
          <img
            src="./images/technologies/skladba_kamenne_dyhy.avif"
            alt="Skladba kamenné dýhy"
            loading="lazy"
            width="600"
            height="400"
          />
        </div>
        <div class="tech-card__body">
          <h3 class="tech-card__title" data-localize="tech_subtitle1"></h3>
          <ul class="tech-card__list">
            <li data-localize="tech_stone_1"></li>
            <li data-localize="tech_stone_2"></li>
            <li data-localize="tech_stone_3"></li>
            <li data-localize="tech_stone_4"></li>
          </ul>
        </div>
      </div>

      <!-- Construction Block -->
      <div class="tech-card">
        <div class="tech-card__image">
          <img
            src="./images/technologies/konstrukce_sviticiho_panelu.avif"
            alt="Konstrukce svítícího panelu"
            loading="lazy"
            width="600"
            height="400"
          />
        </div>
        <div class="tech-card__body">
          <h3 class="tech-card__title" data-localize="tech_subtitle2"></h3>
          <ul class="tech-card__list">
            <li data-localize="tech_panel_1"></li>
            <li data-localize="tech_panel_2"></li>
            <li data-localize="tech_panel_3"></li>
            <li data-localize="tech_panel_4"></li>
            <li data-localize="tech_panel_5"></li>
            <li data-localize="tech_panel_6"></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  @import "../../styles/Base/global";

  .tech-intro {
    max-width: 900px;
    margin: 0 auto 5rem auto;

    .desc {
      border: none;
      padding: 0;
      color: rgba($color-white, 0.7);
    }
  }

  .tech-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    /* Ensure grid items stretch to same height */
    align-items: stretch;

    @include res-min-laptop-l {
      grid-template-columns: 1fr 1fr;
      gap: 6rem;
    }
  }

  .tech-card {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;

    /* Glassmorphism Styles */
    background: rgba($color-black, 0.35);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba($color-white, 0.1);
    border-radius: 20px;
    padding: 3rem 2.25rem 3.75rem;
    box-shadow: 0 12px 44px 0 rgba(0, 0, 0, 0.55);
    transition: transform 0.3s ease;

    &:hover {
      transform: translateY(-5px);
      background: rgba($color-black, 0.42);
      border-color: rgba($color-white, 0.14);
    }

    &__title {
      text-align: center;
      font-family: $font-title;
      font-size: clamp(1.8rem, 1.6vw, 2.2rem);
      line-height: 1.3;
      color: $color-primary; // Golden color
      text-transform: uppercase;
      letter-spacing: 2px;
      font-weight: 700;
      margin-top: 1rem;
      text-wrap: balance;
      min-height: 4.4rem; // Align multiline titles
      display: flex;
      align-items: flex-end;
      justify-content: center;
    }

    &__image {
      width: 100%;
      display: flex;
      justify-content: center;
      margin-bottom: 1rem;

      img {
        width: 100%;
        height: auto;
        max-height: 250px; /* Reduced max-height as requested */
        object-fit: contain;
        filter: drop-shadow(0 15px 30px rgba(0, 0, 0, 0.6));
      }
    }

    &__list {
      list-style: disc;
      margin: 0;
      padding: 0 0 0 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1.2rem; /* Increased gap */
      margin-top: 1rem;

      li {
        position: relative;
        font-family: $font-text;
        color: rgba($color-white, 0.95);
        font-size: 1.3rem; /* Increased font size */
        font-weight: 300;
        line-height: 1.6;
        text-align: left;
      }

      li::marker {
        color: $color-primary;
      }
    }
  }

  .tech-card ol {
    margin: 0;
    padding: 0 0 0 1.6rem;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;

    li {
      font-family: $font-text;
      color: rgba($color-white, 0.95);
      font-size: 1.3rem;
      font-weight: 300;
      line-height: 1.6;
    }

    li::marker {
      color: $color-primary;
      font-weight: 700;
    }
  }
</style>
