---
import Icon from "../icons/Icon.astro";
import { useTranslations, type Lang } from "../../i18n/utils";

interface Props {
  id: string;
  lang?: Lang;
}

const { id, lang = "cs" } = Astro.props;
const t = useTranslations(lang);
---

<section id={id} class="dark">
  <div class="container">
    <div class="contact__wrapper">
      <img
        src="/images/logos/logo.svg"
        alt={t("common.logoAlt")}
        width="150"
        loading="lazy"
      />
      <div>
        <h2 class="title">{t("contact.title")}</h2>
        <div class="contact__grid">
          <div>
            <p class="desc desc--mg-s">
              <span>{t("contact.descPart1")}</span>
              <strong>
                <a href="mailto:info@anewstyle.cz" class="link"
                  >info@anewstyle.cz</a
                >
              </strong>
              <span>{t("contact.descPart2")}</span>
            </p>
            <div class="social">
              <a
                href="https://www.facebook.com/profile.php?id=100088855596654"
                rel="external"
                aria-label={t("contact.gotoFacebook")}
                target="_blank"
              >
                <Icon name="facebook" />
              </a>
              <a
                href="https://www.instagram.com/anewstyle.cz/"
                rel="external"
                aria-label={t("contact.gotoInstagram")}
                target="_blank"
              >
                <Icon name="instagram" />
              </a>
            </div>
          </div>
          <div>
            <a class="button" href="mailto:info@anewstyle.cz">
              <span>{t("contact.btnWriteMessage")}</span>
              <Icon name="email" />
            </a>
          </div>

          <div>
            <h3 class="title title--s">{t("contact.showroomTitle")}</h3>
            <p class="desc desc--no-mg">
              <span>{t("contact.showroomDesc")}</span>
              <address>
                <a
                  href="https://www.google.cz/maps/place/Hybe%C5%A1ova+308%2F61,+602+00+Brno-st%C5%99ed/@49.1887768,16.5968647,17z/data=!3m1!4b1!4m5!3m4!1s0x471294529732ae65:0x75c148bfafac76!8m2!3d49.1887733!4d16.5990534"
                  rel="external"
                  aria-label={t("contact.showroomAddress")}
                  target="_blank"
                  class="link"
                  style="display: block;"
                >
                  Hybešova 61<br />
                  602 00 Brno<br />
                  <span>{t("contact.czechia")}</span>
                </a>
              </address>
              <img
                src="/images/backgrounds/showroom.webp"
                alt={t("contact.showroomTitle")}
                width="250px"
                loading="lazy"
              />
            </p>
          </div>
          <div>
            <h3 class="title title--s">{t("contact.addressTitle")}</h3>
            <address>
              OSM s.r.o.<br />
              Hudcova 86/54<br />
              621 00 Brno<br />
              <span>{t("contact.czechia")}</span><br /><br />
              IČ: 47903180<br />
              DIČ: CZ47903180<br />
            </address>

            <h4 class="title title--xs">{t("contact.materialsTitle")}</h4>
            <a
              href="/downloads/Manual_CZ_AnewStyle_Basic_Deluxe.pdf"
              class="link link--light"
              target="_blank"
              rel="noopener"
              aria-label={t("contact.downloadManualCs")}
            >
              <Icon name="pdf" />
              <span>{t("contact.materialsLink1")}</span>
            </a>
            <br /><br />
            <a
              href="/downloads/Manual_EN_AnewStyle_Basic_Deluxe.pdf"
              class="link link--light"
              target="_blank"
              rel="noopener"
              aria-label={t("contact.downloadManualEn")}
            >
              <Icon name="pdf" />
              <span>{t("contact.materialsLink2")}</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
