---
import Icon from "../icons/Icon.astro";

interface Props {
  id: number;
  title: string;
  imgLight: string;
  has3D: boolean;
}

const { id, title, imgLight, has3D } = Astro.props;
---

<div id={`productCard${id}`} role="button" class="card" aria-label="Zobrazit detail produktu">
  <strong>
    {title}
  </strong>
  <img src={`./images/products/${imgLight}`} alt={title} loading="lazy" width="304" height="165" />
  <div class="text-center">
    <div class="button button--s" data-localize="products_btn_show-detail"></div>
  </div>
  {has3D && <Icon name="ar" />}
</div>
