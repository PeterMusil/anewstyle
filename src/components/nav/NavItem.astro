---
import Icon from "../icons/Icon.astro";

interface Props {
  href: string;
  text: string;
  icon?: string;
}

const { href } = Astro.props;
const { text } = Astro.props;
const { icon } = Astro.props;
---

<li>
  <a href={href} rel="noopener">
    {icon && <Icon name={icon} />}
    {text}
  </a>
</li>
